{
  "version": 2,
  "builds": [
    {
      "src": "main/main/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".vercel/output"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "main/main/wsgi.py"
    }
  ],
  "env": {
    "PYTHONPATH": "main:venv/lib/python3.12/site-packages"
  }
}